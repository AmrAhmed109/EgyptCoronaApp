<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15202B"
    tools:context=".Main6Activity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:src="@drawable/loglog"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginStart="16dp"
        android:id="@+id/egyptflage109"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Coronavirus_Global3"
        app:layout_constraintBottom_toBottomOf="@+id/Coronavirus_Global3"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/Coronavirus_Global3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@id/egyptflage109"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:text="Coronavirus Global"
        android:textSize="20dp"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Coronavirus_Global3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">
                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:background="@drawable/corner"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:id="@+id/first"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="60">

                    <TextView

                        android:layout_marginTop="16dp"
                        android:textColor="@color/grey"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="Total Cases"
                        android:textSize="16dp"

                        />
                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/baby_blue"
                        android:textStyle="bold"
                        android:id="@+id/fTotalCases"
                        android:layout_weight="30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="16dp"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/corner"
                    android:layout_weight="50"
                    android:gravity="center_horizontal"
                    android:id="@+id/first2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="60">

                    <TextView

                        android:layout_marginTop="16dp"
                        android:textColor="@color/grey"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="Today Cases"
                        android:textSize="16dp"

                        />
                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/baby_blue"
                        android:textStyle="bold"
                        android:id="@+id/fToday_Cases"
                        android:layout_weight="30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="16dp"
                        />
                </LinearLayout>
            </LinearLayout>

            //------------------------------------------



            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:background="@drawable/corner"
                    android:layout_weight="50"
                    android:gravity="center_horizontal"
                    android:id="@+id/first1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="60">

                    <TextView

                        android:layout_marginTop="16dp"
                        android:textColor="@color/grey"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="Total Death"
                        android:textSize="16dp"

                        />
                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:id="@+id/fTotalDeath"
                        android:layout_weight="30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="16dp"
                        />


                </LinearLayout>
                //-------------------------------------


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/corner"
                    android:layout_weight="50"
                    android:gravity="center_horizontal"
                    android:id="@+id/first22"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="60">

                    <TextView

                        android:layout_marginTop="16dp"
                        android:textColor="@color/grey"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="Today Death"
                        android:textSize="16dp"

                        />
                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:textStyle="bold"
                        android:id="@+id/fToday_Death"
                        android:layout_weight="30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="16dp"
                        />
                </LinearLayout>
            </LinearLayout>
            //-------------------------------

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">


                <LinearLayout
                    android:id="@+id/first11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="50"
                    android:background="@drawable/corner"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="60">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_weight="30"
                        android:text="Total Recoverd"
                        android:textAlignment="center"
                        android:textColor="@color/grey"
                        android:textSize="16dp" />

                    <TextView
                        android:textAlignment="center"
                        android:id="@+id/fTotal_recoverd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="16dp"
                        android:layout_weight="30"
                        android:text="0"
                        android:textColor="@color/green"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/corner"
                    android:layout_weight="50"
                    android:gravity="center_horizontal"
                    android:id="@+id/first2222"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="60">

                    <TextView
                        android:layout_marginTop="16dp"
                        android:textColor="@color/grey"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="Active Cases"
                        android:textSize="16dp"

                        />
                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:id="@+id/fActrive_cases"
                        android:layout_weight="30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="16dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:paddingBottom="150dp">


                <LinearLayout
                    android:id="@+id/first111"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="50"
                    android:background="@drawable/corner"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:weightSum="60">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_weight="30"
                        android:text="CasesPerOneMillion"
                        android:textAlignment="center"
                        android:textColor="@color/grey"
                        android:textSize="16dp" />

                    <TextView
                        android:textAlignment="center"
                        android:id="@+id/fCasesPerOneMillion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="16dp"
                        android:layout_weight="30"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/corner"
                    android:layout_weight="50"
                    android:gravity="center_horizontal"
                    android:id="@+id/first222"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="60">

                    <TextView
                        android:layout_marginTop="16dp"
                        android:textColor="@color/grey"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="DeathsPerOneMillion"
                        android:textSize="16dp"

                        />
                    <TextView
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:id="@+id/fDeathsPerOneMillion"
                        android:layout_weight="30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="16dp"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>